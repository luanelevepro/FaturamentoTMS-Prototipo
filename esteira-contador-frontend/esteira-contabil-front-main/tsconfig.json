{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "utils/*": [
        "@/utils/*"
      ],
      "components/*": [
        "@/components/*"
      ],
      "ui/*": [
        "components/ui/*"
      ],
      "hooks/*": [
        "@/hooks/*"
      ],
      "lib/*": [
        "@/lib/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "typeRoots": [
      "./src/types"
    ]
  },
  "include": [
    ".",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/pages/api/[...nextauth].js",
    "src/pages/api/auth/[...nextauth].js",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}